# Amaya 环境变量配置示例
# 复制此文件为 .env 并填写相应的值

# --- Telegram 配置 (必需: Token) ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# 可选: 单用户模式可设置 OWNER_ID
OWNER_ID=your_telegram_user_id_here

# --- LLM 提供者选择 (必需) ---
# 支持: "gemini" 或 "openai"
LLM_PROVIDER=gemini

# --- Gemini 配置 (当 LLM_PROVIDER=gemini 时必需) ---
GEMINI_API_KEY=your_gemini_api_key_here
# 可选: 自定义 API 地址 (用于代理或第三方服务)
GEMINI_API_BASE=
# 可选: 自定义模型名称
GEMINI_SMART_MODEL=gemini-2.5-pro
GEMINI_FAST_MODEL=gemini-2.5-flash

# --- OpenAI 配置 (当 LLM_PROVIDER=openai 时必需) ---
OPENAI_API_KEY=your_openai_api_key_here
# 可选: 自定义 API 地址 (用于代理或第三方服务，如 https://api.openai-proxy.com/v1)
OPENAI_API_BASE=
# 可选: 自定义模型名称
OPENAI_SMART_MODEL=gpt-4o
OPENAI_FAST_MODEL=gpt-4o-mini
# 可选: low / medium / high，用于开启 reasoning (Responses API)
OPENAI_REASONING_EFFORT=medium

# --- Logging 配置 (可选) ---
LOG_DIR=data/logs
LOG_LEVEL=INFO
LIBRARY_LOG_LEVEL=WARNING
LOG_RETENTION_DAYS=7
# 单文件大小上限，0 表示不限制（按天分割仍保留）
LOG_MAX_BYTES=0
LOG_PAYLOAD_MAX_BYTES=0
# preview / full / off
LOG_LLM_PAYLOADS=preview

# --- SQLite 配置 (可选) ---
AMAYA_DB_PATH=data/amaya.db

# --- Multi-user 配置 (可选) ---
# REQUIRE_AUTH=true 时，必须配置 OWNER_ID / ALLOWED_USER_IDS / ADMIN_USER_IDS 中任意一个
ALLOWED_USER_IDS=
ADMIN_USER_IDS=
REQUIRE_AUTH=true
DEFAULT_USER_ID=default

# --- LLM 调参 (可选) ---
LLM_MAX_TOOL_CALLS=10
GEMINI_TEMPERATURE=0.7

# --- Telegram 适配器 (可选) ---
TELEGRAM_MAX_MESSAGE_LENGTH=4096
TELEGRAM_TYPING_INTERVAL=3.0
TELEGRAM_ALLOWED_AUDIO_MIME=audio/ogg,audio/webm,audio/wav,audio/flac,audio/mp3,audio/mpeg

# --- 工具类超时 (可选) ---
WEATHER_TIMEOUT_SECONDS=8
HOLIDAY_TIMEOUT_SECONDS=8

# --- Scheduler 配置 (可选) ---
SCHEDULER_MISFIRE_GRACE_SECONDS=60
SCHEDULER_COALESCE=true
